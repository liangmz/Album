html,
body {
    height: 100%;
    /* The html and body elements cannot have any padding or margin. */
}

/* Wrapper for page content to push down footer */
#wrap {
    min-height: 100%;
    height: auto;
    /* Negative indent footer by its height */
    margin: 0 auto -170px;
    /* Pad bottom by footer height */
    padding: 0 0 170px;
}

/* Set the fixed height of the footer here */
#footer {
    height: auto;
    background-color: #f5f5f5;
    padding-top: 37px;
    padding-bottom: 50px;
}

/*以下是横线动画*/
#a {
    height: 1px;
    width: 10%;
    background-color: #3c2858;
    position: absolute;
    left: 30%;
    /* Safari 和 Chrome: */
    animation-name: myfirst;
    animation-duration: 30s;
    animation-timing-function: linear;
    animation-delay: 0s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-play-state: running;
    /* Safari and Chrome: */
    -webkit-animation-name: myfirst;
    -webkit-animation-duration: 30s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: alternate;
    -webkit-animation-play-state: running;
}

@keyframes myfirst {
    0% {
        left: 0px;
    }

    100% {
        left: 90%;
    }
}

@-webkit-keyframes myfirst /* Safari 和 Chrome */
{
    0% {
        left: 0px;
    }

    100% {
        left: 90%;
    }
}

#b {
    height: 1px;
    width: 3%;
    background-color: #3c2858;
    position: absolute;
    left: 30%;
    /* Safari 和 Chrome: */
    animation-name: myfirst2;
    animation-duration: 4s;
    animation-timing-function: linear;
    animation-delay: 0s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-play-state: running;
    /* Safari and Chrome: */
    -webkit-animation-name: myfirst2;
    -webkit-animation-duration: 4s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: alternate;
    -webkit-animation-play-state: running;
}

@keyframes myfirst2 {
    0% {
        left: 0px;
    }

    100% {
        left: 97%;
    }
}

@-webkit-keyframes myfirst2 /* Safari 和 Chrome */
{
    0% {
        left: 0px;
    }

    100% {
        left: 97%;
    }
}

#c {
    height: 1px;
    width: 7%;
    background-color: #3c2858;
    position: absolute;
    left: 70%;
    /* Safari 和 Chrome: */
    animation-name: myfirst3;
    animation-duration: 8s;
    animation-timing-function: linear;
    animation-delay: 0s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-play-state: running;
    /* Safari and Chrome: */
    -webkit-animation-name: myfirst3;
    -webkit-animation-duration: 8s;
    -webkit-animation-timing-function: linear;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: alternate;
    -webkit-animation-play-state: running;
}

@keyframes myfirst3 {
    0% {
        left: 93%;
    }

    100% {
        left: 0%;
    }
}

@-webkit-keyframes myfirst3 /* Safari 和 Chrome */
{
    0% {
        left: 93%;
    }

    100% {
        left: 0%;
    }
}

/*横线动画完*/

/*图片放大*/
.mypic
{
transition:all 200ms;
-ms-transition: all 200ms;
-webkit-transition:all 200ms; /* Safari */
}

.mypic:hover
{
transform: scale(1.3,1.3);
-ms-transform: scale(1.3,1.3); /* IE 9 */
-webkit-transform: scale(1.3,1.3); /* Safari and Chrome */
}
/*图片放大完*/


/*修改图片信息输入框变高过渡*/
.picUpdate {
    transition: all 200ms;
    -ms-transition: all 200ms;
    -webkit-transition: all 200ms; /* Safari */
}
/**/

.tagLoading {
    /*动画*/
    animation-name: tagLoading_animation;
    animation-duration: 1000ms;
    animation-timing-function: linear;
    animation-delay: 0s;
    animation-iteration-count: infinite;
    animation-direction: normal;
    animation-play-state: running;

    -webkit-animation-name: tagLoading_animation;
    -webkit-animation-duration: 1000ms;
    -webkit-animation-timing-function: linear;
    -webkit-animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: normal;
    -webkit-animation-play-state: running;
}

@keyframes tagLoading_animation {

    0% {
        /*2D 变化*/
        transform: rotate(0deg);
        -ms-transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
        -ms-transform: rotate(360deg);
        -webkit-transform: rotate(360deg);
    }
}

@-webkit-keyframes tagLoading_animation 
{
    0% {
        transform: rotate(0deg);
        -ms-transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
        -ms-transform: rotate(360deg);
        -webkit-transform: rotate(360deg);
    }
}

.login {
    transition: all 1000ms;
    -ms-transition:all 1000ms;
    -webkit-transition: all 1000ms; /* Safari */
}